                            <h3 class="h4 mb-0">{{ coach.nom }} {{ coach.prenom }}</h3>
                            <span class="text-primary">Coaching {{ coach.coaching }}</span>
                        </div>
                        <a  href="{{ path('app_coachdeatail', {'id' : coach.id }) }}"><button class="btn btn-primary">Consulter !</button></a>
                    </div>
                </div>            
            </div>
        </div>
            {% endfor %}
