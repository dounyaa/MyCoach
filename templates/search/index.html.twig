{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
    <div>
        {% if data | length == 0 %}
            <h4>Aucun résulat pour votre recherche.</h4>
           {% else %}
               <h3 class="mt-3">Vos résulats de recherche :</h3>
            {% for dt in data %}
                        <div class="col-lg-3 ">
                            <div class="row" align="center">
                                <div class="col-lg-12 ">
                                    {% if dt.image == NULL %}
                                        <img width="250px" height="250px" src="images/anonymous_user.webp">
                                    {% else %}
                                        <img width="250px" height="250px" src="/images/coach/{{ dt.image }}">
                                    {% endif %}
                                </div>
                                <div class="col-lg-12">
                                    <h2>{{ dt.nom }}</h2>
                                </div>
                                <div class="col-lg-12">
                                    <p>{{ dt.prenom }}</p>
                                </div>
                                <div class="col-lg-12">
                                    <p>{{ dt.prenom }}</p>
                                </div>
                                <div class="col-lg-12">
                                    <a href="{{ path('app_coachdeatail', {'id' : dt.id }) }}"><button class="btn btn-success">Consulter</button></a>
                                </div>
                            </div>
                        </div>
            {% endfor %}
          {% endif %}
     </div>
{% endblock %}
