{% extends 'base.html.twig' %}

{% block title %}Disponibilite index{% endblock %}

{% block body %}

<section class="blog-section spad">
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-8 p-0">
                {% for rdv in rendezvous %}
                    <div class="blog-item">
                        <div class="bi-text">
                            <h5><a href="">Rendez-vous de {{ rdv.duree }}</a></h5>
                            <ul>
                                <li>{{ rdv.date ? rdv.date|date('Y-m-d') : '' }}</li>
                                <li>{{ rdv.date ? rdv.date|date('H:i:s') : '' }}</li>
                                <li>{{ rdv.canal }}</li>
                            </ul>
                            <form method="post" action="{{ path('app_mes_rendezvous_annuler', {'id': rdv.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="annuler" value="{{ rdv.id }}">
                                <button class="primary-btn btn-normal appoinment-btn" type="submit">Annuler</button>
                            </form>
                        </div>
                    </div>
                {% else %}
                <div class="mb-5 wow fadeIn">
                    <h2>no records found</h2>
                </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}