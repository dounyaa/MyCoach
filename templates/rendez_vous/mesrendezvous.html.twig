{% extends 'base.html.twig' %}

{% block title %}Disponibilite index{% endblock %}

{% block body %}

<section class="blog-section spad">
        <div class="container mt-5">
            <div class="row">
                <div class="col-lg-8 p-0">
                {% for rdv in rendezvous %}
                    <div class="blog-item">
                        <div class="bi-text">
                            <h5><a href="">Rendez-vous de {{ rdv.duree }} min</a></h5>
                            <p class="mb-2">Avec le coach {{ rdv.coach.nom }}</p>
                            <ul>
                                <li>{{ rdv.date ? rdv.date|date('Y-m-d') : '' }}</li>
                                <li>{{ rdv.date ? rdv.date|date('H:i:s') : '' }}</li>
                                <li>{{ rdv.canal }}</li>
                            </ul>
                            <form method="post" action="{{ path('app_mes_rendezvous_annuler', {'id': rdv.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir annulé ce rendez-vous?');">
                                <input type="hidden" name="annuler" value="{{ rdv.id }}">
                                <button class="primary-btn btn-normal appoinment-btn" type="submit">Annuler</button>
                            </form>
                        </div>
                    </div>
                {% else %}
                <div class="mb-5 wow fadeIn">
                    <h2 style="color: white;">Vous avez aucun rendez-vous pour le moment. </h2>
                </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}