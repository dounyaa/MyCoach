{% extends 'base.html.twig' %}

{% block title %}Disponibilite index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="col-lg-4">
            <div class="row mt-n4">
            {% for rdv in rendezvous %}
            <div class="col-sm-6 col-xl-6 mt-4">
            <div class="card-body border-0 shadow">
                <div class="mb-2">
                    <div class="text-start">
                        <h2 class="h5 mb-0 text-primary">Date</h2>
                    </div>
                    <p>{{ rdv.date ? rdv.date|date('Y-m-d H:i:s') : '' }}</p>
                </div>
                <div class="mb-2">
                    <div class="text-start">
                        <h2 class="h5 mb-0 text-primary">Dur√©e</h2>
                    </div>
                    <p>{{ rdv.duree }}</p>
                </div>
                <div class="mb-2">
                    <div class="text-start">
                        <h2 class="h5 mb-0 text-primary">canal</h2>
                    </div>
                    <p>{{ rdv.canal }}</p>
                </div>
                <div class="mb-2">
                        <form method="post" action="{{ path('app_mes_rendezvous_annuler', {'id': rdv.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="annuler" value="{{ rdv.id }}">
                            <button class="btn btn-primary" type="submit">Annuler</button>
                        </form>
                </div>
                </div> 
            </div>
            {% else %}
                <div class="mb-5 wow fadeIn">
                    <h2>no records found</h2>
                </div>
        {% endfor %}
            </div>
    </div>
</div>
{% endblock %}