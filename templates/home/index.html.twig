{% extends 'base.html.twig' %}

{% block body %}
	<!-- Hero Section Begin -->
	<section class="hero-section">
		<div class="hs-slider owl-carousel">
			<div class="hs-item set-bg" data-setbg="/img/hero/hero-1.jpg">
				<div class="container">
					<div class="row">
						<div class="col-lg-6 offset-lg-6">
							<div class="hi-text">
								<span>GARDEZ LA FORME</span>
								<h1>
									Trouvez votre <strong>coach</strong> sportif
								</h1>
								<a href="{{path("app_coachs")}}" class="primary-btn">Decouvrir</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item set-bg" data-setbg="/img/hero/hero-2.jpg">
				<div class="container">
					<div class="row">
						<div class="col-lg-6 offset-lg-6">
							<div class="hi-text">
								<span>ATTEIGNEZ VOS OBJECTIFS</span>
								<h1>
									Trouvez votre <strong>coach</strong> sportif
								</h1>
								<a href="{{path("app_coachs")}}" class="primary-btn">Decouvrir</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero Section End -->

	<!-- ChoseUs Section Begin -->
	<section class="choseus-section spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section-title">
						<span>Pourquoi nous ?</span>
						<h2>
							NOS ATOUTS, NOTRE FORCE
						</h2>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-3 col-sm-6">
					<div class="cs-item">
						<span class="flaticon-034-stationary-bike"></span>
						<h4>
							Un véritable accompagnement
						</h4>
						<p>
							Le rôle de votre coach sportif est de vous préparer un plan d’entraînement personnalisé et vous proposer un accompagnement sur-mesure.
						</p>
					</div>
				</div>
				<div class="col-lg-3 col-sm-6">
					<div class="cs-item">
						<span class="flaticon-033-juice"></span>
						<h4>
							Un programme 100 % sur-mesure
						</h4>
						<p>
							Grâce à votre coach sportif personnel vous allez bénéficier d'un entraînement personnalisé selon
							vos propres capacités et objectifs.
						</p>
					</div>
				</div>
				<div class="col-lg-3 col-sm-6">
					<div class="cs-item">
						<span class="flaticon-002-dumbell"></span>
						<h4>
							Un plan d'entrainement professionnel
						</h4>
						<p>
							Pour élaborer au mieux votre programme, votre coach vous fera passer différents tests physiques, votre caractère, votre mode de vie.
						</p>
					</div>
				</div>
				<div class="col-lg-3 col-sm-6">
					<div class="cs-item">
						<span class="flaticon-014-heart-beat"></span>
						<h4>
							Gagner un temps précieux
						</h4>
						<p>
							Grâce à un programme et à un accompagnement sur-mesure vous allez droit au but car chaque séance et chaque exercice sont conçus uniquement pour vous.
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- ChoseUs Section End -->

	<!-- Banner Section Begin -->
	<section class="banner-section set-bg" data-setbg="/img/banner-bg.jpg">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="bs-text">
						<h2>
							Retrouvez la forme avec votre coach sportif.
						</h2>
						<div class="bt-tips">
							Nous somme la pour vous !
						</div>
						<a href="{{ path("app_login")}}" class="primary-btn btn-normal">Se connecter</a>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Banner Section End -->

	<!-- Team Section Begin -->
	<section class="team-section spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="team-title">
						<div class="section-title">
							<span>Nos Coachs</span>
							<h2>
								Coacher vous avec des experts
							</h2>
						</div>
						<a href="{{path("app_coachs")}}" class="primary-btn btn-normal appoinment-btn">Voir tout</a>
					</div>
				</div>
			</div>
			<div class="row">
			{% if coachs|length == 0 %}
                <p>Nous sommes navré, y a aucun coach pour le moment !</p>
            {% endif %}
				<div class="ts-slider owl-carousel">
            {% for coach in coachs %}
					<div class="col-lg-4">
					{% if coach.image == null %}
					<div class="ts-item set-bg" data-setbg="/images/anonymous_user.webp">
                	{% else %}
					<div class="ts-item set-bg" data-setbg="/images/coach/{{ coach.image }}">
                	{% endif %}
							<div class="ts_text">
								<h4>
									{{ coach.nom }} {{ coach.prenom }}
								</h4>
								<span>Coaching {{ coach.coaching }}</span>
							</div>
						</div>
					</div>
			{% endfor %}
				</div>
			</div>
		</div>
	</section>
	<!-- Team Section End -->
{% endblock %}
