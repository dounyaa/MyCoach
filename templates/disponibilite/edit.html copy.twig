{% extends 'base.html.twig' %}

{% block title %}Edit Disponibilite{% endblock %}

{% block body %}
<div class="container mt-5">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary mt-2">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <form method="post" action="{{ path('app_disponibilite_delete', {'id': disponibilite.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="delete" value="{{ disponibilite.id }}">
        <button class="btn btn-primary mt-2">Delete</button>
    </form>

    <a class="btn btn-primary mt-3" type="button" href="{{ path('app_disponibilite_index') }}">back to list</a>
</div>
{% endblock %}
